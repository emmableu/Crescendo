                            input,
                            '</code>'
                        ].join('');
                        if (thisTest.expOut.constructor !== Function) {
                            var expOut = thisTest.expOut;
                            if (expOut instanceof List || expOut instanceof Array) {
                                expOut = arrayFormattedString(expOut);
