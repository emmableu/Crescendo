                    if (allFeedback || tip.allCorrect) {
                        appendElement(
                            "p",
                            "✔",
                            ["data", "passing-test-case"],
                            document.getElementsByClassName("tests-section" + i + x)[0]
                        );
                        // TODO Clean these strings up.
